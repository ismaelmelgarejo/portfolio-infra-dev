---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Infraestructura y Desarrollo Web" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#0d1117] text-gray-300 font-mono min-h-screen flex flex-col overflow-x-hidden selection:bg-green-500/30 selection:text-green-200">
		<Header />
		<main class="flex-grow pt-20 px-6 max-w-7xl mx-auto w-full relative z-10">
			<slot />
		</main>
		<Footer />
        
        <!-- Background grid effect -->
        <div class="fixed inset-0 z-0 pointer-events-none" style="background-image: radial-gradient(#232936 1px, transparent 1px); background-size: 24px 24px; opacity: 0.3;"></div>
	</body>
</html>
