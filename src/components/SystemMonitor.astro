---
const skills = [
    { name: 'JavaScript / TypeScript', usage: 92, icon: 'JS' },
    { name: 'React / Next.js', usage: 85, icon: 'React' },
    { name: 'Astro', usage: 78, icon: 'Astro' },
    { name: 'Node.js / Express', usage: 80, icon: 'Node' },
    { name: 'Docker / Kubernetes', usage: 65, icon: 'Docker' },
    { name: 'AWS / Cloud', usage: 60, icon: 'AWS' },
    { name: 'Linux / Bash', usage: 70, icon: 'Tux' },
    { name: 'SQL / NoSQL', usage: 75, icon: 'DB' }
];
---

<div class="border border-gray-800 bg-[#0d1117] p-6 rounded relative overflow-hidden">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6 border-b border-gray-800 pb-2">
        <h3 class="text-white font-bold flex items-center">
            <span class="text-amber-500 mr-2">âš </span>
            SYSTEM_RESOURCES
        </h3>
        <span class="text-xs text-gray-500 font-mono">PID: 43291</span>
    </div>

    <!-- Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
        {skills.map(skill => (
            <div class="group">
                <div class="flex justify-between text-xs font-mono mb-1 text-gray-400">
                    <span>{skill.name}</span>
                    <span class="text-green-500">{skill.usage}%</span>
                </div>
                <div class="w-full bg-gray-800 h-2 rounded-full overflow-hidden">
                    <div 
                        class="bg-gradient-to-r from-green-500 to-amber-500 h-full rounded-full transition-all duration-1000 group-hover:opacity-80"
                        style={`width: ${skill.usage}%`}
                    ></div>
                </div>
            </div>
        ))}
    </div>

    <!-- Footer decoration -->
     <div class="mt-6 pt-4 border-t border-gray-800 text-xs font-mono text-gray-600 flex justify-between">
        <span>MEM: 16GB / 64GB</span>
        <span>SWAP: 0B</span>
        <span>LOAD: 0.45 0.32 0.28</span>
    </div>
</div>
